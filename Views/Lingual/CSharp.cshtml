@{
    ViewData["Lingual"] = "Portal to Authorization Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        #item2 {
            border: 3px greenyellow double;
        }


        .grid-container {
            display: grid;
            justify-content: center;
            grid-template-columns: repeat(2, 1fr); /* 2 columns */
            grid-template-rows: repeat(2, 1fr);    /* 2 rows */
            height: 75vh;                         /* Full height of the viewport */
            gap: 22px; 
                z-index: 1; /* Ensure it's on top of the background */                            /* Space between grid items */
        }

        .grid-item {
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 20px;
            border: 1px solid #ccc;  /* Optional border */
            background-color: rgba(133, 150, 245, 0.2); /* Background color */
            margin: 10px;
            box-shadow: outset rgb(205, 235, 247) 3px 3px 3px;
            color: aliceblue;
            font-size: 25px;
            font-family: Georgia, 'Times New Roman', Times, serif;
            font-weight: bolder;
            text-shadow: 3px 3px 3px lightskyblue;
        }

        .grid-item:hover {
          background-color: rgba(133, 150, 245, 0.5); /* Background color */
            border: 4px rgb(251, 248, 248);
        }



    </style>
</head>
<body>
    <div class="BGContainer" id="CSPic">
        @* <div class="Desc">
            <h1>C#</h1>
        </div> *@
        <div class="grid-container">
            <a class="grid-item" asp-area="" asp-controller="Lingual" asp-action="Python" id="item1">PYTHON</a>
        <a class="grid-item" asp-area="" asp-controller="Lingual" asp-action="CSharp" id="item2">C#</a>
        <a class="grid-item" asp-area="" asp-controller="Lingual" asp-action="JS" id="item3">JAVASCRIPT</a>
        <a class="grid-item" asp-area="" asp-controller="Lingual" asp-action="Typescript" id="item4">TYPESCRIPT</a>
        </div>
    
</div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>